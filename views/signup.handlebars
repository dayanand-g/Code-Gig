    <div class="upper">
        <div class="sign-div">
            <form class="signin">
                <h1>Sign up</h1>

                <div class="input-text">
                    <input type="text" placeholder="User Name">
                </div>

                <div class="input-text">
                    <input type="text" id="inputEmail" name="email" placeholder="Email or phone number" />
                    <div class="warning-input" id="warningEmail">
                        Please enter a valid email or phone number.
                    </div>
                </div>
                
                <div class="input-text">
                    <input type="password" id="inputPassword" name="password" placeholder="Your Password" />
                    <div class="warning-input" id="warningPassword">
                        Your password must contain between 4 and 60 characters.
                    </div>
                </div>

                <div class="input-text" id="confirm">
                    <input type="password" id="inputPassword" name="password" placeholder="Confirm password" />
                    <div class="warning-input" id="warningPassword">
                        Your password must contain between 4 and 60 characters.
                    </div>
                </div>
                
                <div id="sbtn">
                    <a href="/gigs/login" class="signin-button">&nbsp Create your account &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp</a>
                </div>
                
                <div class="new-members">Already have an account? &nbsp<a href="/gigs/login" class="signup-link">login now</a>.
                </div>
                
            </form>
        </div>
    </div>